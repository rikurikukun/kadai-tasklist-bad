<h1>メッセージ一覧</h1>

<ul>
  <% @tasks.each do |task| %>
    <li><%= link_to task.id, task %> : <%= task.content %></li>
  <% end %>
</ul>

<%= link_to '新規メッセージの投稿', new_task_path %>
<%= link_to 'このメッセージを編集する', edit_message_path(@task) %>
<%= link_to 'このメッセージを削除する', @task, method: :delete, data: { confirm: '本当に削除してよろしいですか？' } %>